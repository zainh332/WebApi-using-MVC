
@{
    ViewBag.Title = "Index";
}
<script src="~/Scripts/jquery-3.4.1.js"></script>
<h2>Index</h2>
<input type="text" placeholder="Enter the Employee ID" id="txt"/>
<input type="button" value="Get Employee Deatils" id="btn3"/>
</br>
</br>
<input type="button" value="Get All Employees" id="btn1" />
<input type="button" value="clear" id="btn2"/>
<div id="ShowData">

</div>
<script>
    $(document).ready(function () {
        $("#btn3").click(function () {
            var id = $("#txt").val();
            $.getJSON('/api/EmployeesData/' + id, function (responseData) {
                var item = "<h2>" + responseData + "</h2>";
                $(item).appendTo("#ShowData");
            });
        });

        $("#btn1").click(function () {
            $.getJSON('/api/EmployeesData', function (responseData) {
                $.each(responseData, function (key, val) {
                    var item = "<h2>" + val + "</h2>";
                    $(item).appendTo("#ShowData");
                });

            });

        });

        $("#btn2").click(function () {
            $("#ShowData").empty();
        });
        
    });
    </script>